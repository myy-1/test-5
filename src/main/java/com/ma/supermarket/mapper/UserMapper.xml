<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ma.supermarket.mapper.UserMapper">
  <select id="findUserByName" parameterType="java.lang.String" resultType="java.lang.Integer">
        select  count(*)  from user
        where uname=#{name}
    </select>
  <insert id="regist" parameterType="com.ma.supermarket.bean.User">
       insert into user(uname,uaccount,upassword,urole,address,telephone,realname)
       values(#{uname},#{uaccount},#{upassword},#{urole},#{address},#{telephone},#{realname})
    </insert>
  <select id="login" parameterType="com.ma.supermarket.bean.User">
        select  uaccount,upassword from user
        where uaccount=#{account} and upassword=#{password}
    </select>

    <select id="selectRole" parameterType="java.lang.Integer">
     select role_id from user
     where  urole=#{role}
    </select>

</mapper>